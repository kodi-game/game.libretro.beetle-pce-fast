<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-pce-fast"
		name="NEC - PC Engine / CD (Beetle PCE FAST)"
		version="1.31.0.45"
		provider-name="Mednafen Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.pce" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>PCE</platforms>
		<extensions>pce|cue|ccd|chd|toc|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.beetle-pce-fast</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="da_DK">NEC - PC Engine / CD (Beetle PCE FAST)</summary>
		<summary lang="en_GB">NEC - PC Engine / CD (Beetle PCE FAST)</summary>
		<summary lang="es_ES">NEC - PC Engine / CD (Beetle PCE RÁPIDO)</summary>
		<summary lang="zh_CN">NEC - PC 引擎 / CD (Beetle PCE FAST)</summary>
		<description lang="da_DK">Beetle PC Engine Fast er en fork af Mednafens PC Engine Fast-driver.[CR][CR]Sammenlignet med Beetle PC Engine bytter den hurtige version typisk unødvendig nøjagtighed væk til fordel for hastighed.</description>
		<description lang="de_DE">Beetle PC Engine Fast ist ein Fork des Treibers PC Engine Fast von Mednafen.[CR][CR]Im Vergleich zu Beetle PC Engine verzichtet die schnelle Version auf typischerweise unnötige Genauigkeit zu Gunsten von Geschwindigkeit.</description>
